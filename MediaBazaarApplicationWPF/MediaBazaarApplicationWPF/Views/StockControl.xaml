<UserControl x:Class="MediaBazaarApplicationWPF.Views.StockControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaBazaarApplicationWPF.Views"
             mc:Ignorable="d" MinHeight="50" MinWidth="250" HorizontalAlignment="Stretch" 
             VerticalAlignment="Top"  Height="55"  Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="2" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <!-- Row 0 -->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" Background="Aqua"/>
        <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Background="Blue"/>
        <!-- Row 1-->
        <Label x:Name="ItemName" Grid.Row="1" Grid.Column="1"  Content="Iphone 6" VerticalAlignment="Top" FontWeight="Bold" FontSize="13" Margin="0" Padding="5,5,5,3" />
        <TextBlock x:Name="tbQuantity"  Grid.Row="1" Grid.Column="2" Width="25" HorizontalAlignment="Left" Visibility="Hidden" FontWeight="Bold"/>
        <Label x:Name="lblQuantity" Content="15" Grid.Row="1" Grid.Column="2" Width="25" HorizontalAlignment="Left" FontWeight="Bold"/>
        <Button x:Name="btnIncrease" Content="+" Grid.Column="3" Grid.Row="1" Margin="3"  Width="25" Background="Aqua" BorderBrush="Blue"/>

        <!-- Row 2 -->
        <Label x:Name="DptName" Content="Computers" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Padding="10 0" FontStyle="Italic"/>
        <TextBlock x:Name="tbThreshold"  Grid.Row="2" Grid.Column="2" Width="25" HorizontalAlignment="Center" Visibility="Hidden"/>
        <Label x:Name="lblThreshold" Content="5" Grid.Row="2" Grid.Column="2" Width="25" HorizontalAlignment="Center"/>
        <Button x:Name="btnDecrease" Content="-" Grid.Column="3" Grid.Row="2" Margin="3"  Width="25" Background="Aqua" BorderBrush="Blue"/>

        <!-- Row 3-->
        <StackPanel Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Background="Blue"/>

        <!-- Decorative -->
        <StackPanel Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" Background="Aqua" HorizontalAlignment="Right" Width="3"/>
        <StackPanel Grid.Row="1" Grid.RowSpan="2" Grid.Column="2" Background="Aqua" HorizontalAlignment="Right" Width="3"/>
    </Grid>
</UserControl>
