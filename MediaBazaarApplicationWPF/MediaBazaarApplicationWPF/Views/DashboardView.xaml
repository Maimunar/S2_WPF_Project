<Window x:Class="MediaBazaarApplicationWPF.Views.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaBazaarApplicationWPF.Views"
        mc:Ignorable="d"
        Title="DashboardView" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        
        <!-- Row 1 -->
        <!--<TextBlock Text="{Binding Path=Test}"/>-->
        <Button Content="Logout" Grid.Row="1" Grid.Column="1" Padding="5 2"/>
        <Button Content="Requests" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="4" Padding="5 2" HorizontalAlignment="Right"/>
        
        <!-- Row 2 -->
        <WrapPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="5" HorizontalAlignment="Center">
            <Button Content="Stock"  Padding="5 2" Margin="10"/>
            <Button Content="Work Shifts"  Padding="5 2" Margin="10"/>
        </WrapPanel>

        <ListBox Grid.Row="2" Grid.Column="2" Grid.RowSpan="4" Grid.ColumnSpan="4" MinHeight="200" MinWidth="100" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        <!-- Row 3 -->
        <WrapPanel Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="5" HorizontalAlignment="Center">
            <Button Content="Statistics"  Padding="5 2" Margin="10"/>
            <Button Content="Management"  Padding="5 2" Margin="10"/>
        </WrapPanel>
        
    </Grid>
</Window>
