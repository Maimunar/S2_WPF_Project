<Window x:Class="MediaBazaarApplicationWPF.Views.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaBazaarApplicationWPF.Views"
        mc:Ignorable="d"
        Title="DashboardView" Height="450" Width="800">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="VisibilityBoolConvert" />
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        
        <!-- Row 1 -->
        <!--<TextBlock Text="{Binding Path=Test}"/>-->
        <Button Name="LogoutButton" Content="Logout" Grid.Row="1" Grid.Column="1" Padding="5 2" Click="LogoutButton_Click"/>
        <Button Content="Requests" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="4" Padding="5 2" HorizontalAlignment="Right" Visibility="{Binding BtnRequestsVisible, Converter={StaticResource VisibilityBoolConvert}, FallbackValue=Hidden}"/>
        
        <!-- Row 2 -->
        <WrapPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="5" HorizontalAlignment="Center">
            <Button Name="StockButton" Content="Stock"  Padding="5 2" Margin="10" Visibility="{Binding BtnStockVisible, Converter={StaticResource VisibilityBoolConvert}, FallbackValue=Hidden}" Click="StockButton_Click"/>
            <Button Name="WorkshiftsButton" Content="Work Shifts"  Padding="5 2" Margin="10" Visibility="{Binding BtnWorkshiftsVisible, Converter={StaticResource VisibilityBoolConvert}, FallbackValue=Hidden}" Click="WorkshiftsButton_Click"/>
        </WrapPanel>

        <ListBox Grid.Row="2" Grid.Column="2" Grid.RowSpan="4" Grid.ColumnSpan="4" MinHeight="200" MinWidth="100" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        <!-- Row 3 -->
        <WrapPanel Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="5" HorizontalAlignment="Center">
            <Button Name="StatisticsButton" Content="Statistics"  Padding="5 2" Margin="10" Visibility="{Binding BtnStatisticsVisible, Converter={StaticResource VisibilityBoolConvert}, FallbackValue=Hidden}" Click="StatisticsButton_Click"/>
            <Button Name="ManagementButton" Content="Management"  Padding="5 2" Margin="10" Visibility="{Binding BtnManagementVisible, Converter={StaticResource VisibilityBoolConvert}, FallbackValue=Hidden}" Click="ManagementButton_Click"/>
        </WrapPanel>
        
    </Grid>
</Window>
